{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/MaaAssistantArknights/maa-cli/raw/v0.4.0/maa-cli/schemas/cli.schema.json",
  "type": "object",
  "properties": {
    "core": {
      "type": "object",
      "properties": {
        "channel": { "$ref": "#/definitions/channel" },
        "test_time": { "type": "integer" },
        "api_url": { "type": "string", "format": "uri" },
        "components": {
          "type": "object",
          "properties": {
            "library": { "type": "boolean", "default": true },
            "resource": { "type": "boolean", "default": true }
          }
        }
      }
    },
    "cli": {
      "type": "object",
      "properties": {
        "channel": { "$ref": "#/definitions/channel" },
        "api_url": { "type": "string", "format": "uri" },
        "download_url": { "type": "string", "format": "uri" },
        "components": {
          "type": "object",
          "properties": {
            "binary": { "type": "boolean", "default": true }
          }
        }
      }
    },
    "resource": {
      "type": "object",
      "properties": {
        "auto_update": { "type": "boolean" },
        "backend": { "type": "string", "enum": ["git", "libgit2"] },
        "remote": {
          "type": "object",
          "properties": {
            "branch": { "type": "string", "default": "main" },
            "url": { "type": "string" },
            "ssh_key": { "type": "string" }
          }
        }
      }
    }
  },
  "definitions": {
    "channel": {
      "type": "string",
      "enum": ["stable", "Beta", "Alpha"]
    }
  }
}
